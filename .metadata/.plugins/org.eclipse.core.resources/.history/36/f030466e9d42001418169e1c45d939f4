package Java.util;

import java.util.Scanner;
public class FromBinary {
	public static void main(String[] args) {
		Scanner keyboard = new Scanner(System.in);
		System.out.print("Enter a 4-bit binary integer: ");
		int bits[] = (int) keyboard.nextInt();
		if ((bits[].length > 3) && (bits.length < 3)){
			System.out.print("Illegal length");
			break;
		}
		for (int i=0; i <3; i++)
		{
			if (bits[i]<1){
				int decimal = (decimal + (bits[i]^(i+1)));
			}
			else{
				System.out.print("Not a binary number");
			}
			
		}
		
	}

}
